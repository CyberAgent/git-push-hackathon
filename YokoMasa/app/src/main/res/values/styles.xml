<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:textColor">@color/textNormal</item>
    </style>

    <style name="LoginButton">
        <item name="android:layout_width">@dimen/login_button_width</item>
        <item name="android:layout_height">@dimen/login_button_height</item>
        <item name="android:background">@drawable/login_button_statelist</item>
        <item name="android:textColor">#FFF</item>
    </style>

    <style name="FeedEntryLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/feed_entry_height</item>
        <item name="android:padding">@dimen/feed_entry_padding</item>
    </style>

    <style name="ToolBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
    </style>

    <style name="TabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="PopUpMenuStyle" parent="Theme.AppCompat.Light">
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:textColor">@color/white</item>
    </style>

</resources>
